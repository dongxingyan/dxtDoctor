tw(value)
    value/19.2vw

th(value)
    value/10.8vh


.popup-shade{
    width: tw(1920);
    height: th(1080);
    background-color: #00000055;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1000;
    display: flex;
    justify-content: center;
    align-items: center;
    .popup-window{
        width: tw(880)
        height: th(521)
        background-color #30333c
        box-shadow: 0 0 tw(40) black
        border-radius: tw(20)        
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        align-items: center;
        .button{
            display flex
            width 100%
            flex-direction row
            justify-content center
            align-items: center;
            .main-button{
            display block
            font-size tw(42)
            width tw(350)
            height th(140)
            line-height th(140)
            background-color #fff
            color rgba(75, 215, 255, 0.7)
            border-radius th(70)
            border th(3) solid #4bd7ff
            &.selected{
                box-shadow 0px 0px th(38) #4bd7ff;
                transform: scale(1.2,1.2)
            }
            }
        }
    }
}